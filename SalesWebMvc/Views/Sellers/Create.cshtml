@model SalesWebMvc.Models.ViewModels.SellerFormViewModel;

@{
    ViewData["Title"] = "Adicionar vendedor";
}

<h2>@ViewData["Title"]</h2>

<h4>
    Vendedor
</h4>
<hr/ >
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Seller.Name" class="control-label"></label>
                <input asp-for="Seller.Name" class="form-control" placeholder="Nome completo" />
            </div>
            <div class="form-group">
                <label asp-for="Seller.Email" class="control-label">Endereço de email</label>
                <input asp-for="Seller.Email" class="form-control" placeholder="Email" />
            </div>
            <div class="form-group">
                <label asp-for="Seller.BirthDate" class="control-label"></label>
                <input asp-for="Seller.BirthDate" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Seller.BaseSalary" class="control-label"></label>
                <input asp-for="Seller.BaseSalary" class="form-control" placeholder="1000,00" />
            </div>
            <div class="form-group">
                <label asp-for="Seller.DepartmentId" class="control-label">Departamento</label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id", "Nome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>

        </form>

    </div>
</div>