@model SalesWebMvc.Models.Seller;

@{
    ViewData["Title"] = "Adicionar vendedor";
}

<h2>@ViewData["Title"]</h2>

<h4>
    Vendedor
</h4>
<hr/ >
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nome</label>
                <input asp-for="Name" class="form-control" placeholder="Nome completo" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Endereço de email</label>
                <input asp-for="Email" class="form-control" placeholder="Email" />
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label">Data de nascimento</label>
                <input asp-for="BirthDate" class="form-control" placeholder="11/04/2000" />
            </div>
            <div class="form-group">
                <label asp-for="BaseSalary" class="control-label">Salário</label>
                <input asp-for="BaseSalary" class="form-control" placeholder="Salário" />
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>

        </form>

    </div>
</div>